page{
  background-color:#F1EFF3;
}
.containerPage{
  height: calc(100vh - 100rpx);
  overflow: scroll;
}
.header{
  background-color: #ffffff;
  width: 100%;
   display: -webkit-flex; /* Safari */
    -webkit-align-items: center; /* Safari 7.0+ */
    display: flex;
	flex-direction:column;
    align-items: center;
}
.header .author{
    color:#ccc;
    font-size: 28rpx;
}
.header image{
   width: 250rpx;
   height: 300rpx;
}
.shortComment{
  margin-top: 30rpx;
  display: -webkit-flex; /* Safari */
    -webkit-align-items: center; /* Safari 7.0+ */
    display: flex;
	flex-direction:column;
    align-items: center;
  background-color: #ffffff;
}
.commentArea{
  width: calc(100vw - 20rpx);
}
.shortComment .comment{
    border-radius: 10rpx;
    background-color: #EFEEF2;
    display: inline-flex;
    align-items: center;
     margin-left:20rpx; 
    margin-bottom: 10rpx;
    font-size: 28rpx;
    height: 50rpx;
    padding-left: 10rpx;
    line-height: 50rpx;
    padding-right: 10rpx;

}
