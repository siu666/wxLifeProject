.intro{
   background-color: #ffffff;
   margin-top: 25rpx;
   display: flex;
   flex-direction: column;
   align-items: center;
}
.intro .title{
     margin-bottom: 10rpx;
    font-weight: bold;
}
.intro .content{
   text-indent: 2em;
   font-size: 30rpx;
}
.info-container{
   background-color: #ffffff;
   margin-top: 25rpx;
}
.info-container .title{
  display: block;
  font-weight: bold;
  text-align: center;
}
.info-container .info-content{
  
   padding: 10rpx 10rpx ;
  }
  .info-container .info-content .container{
    display: flex;
    }
.info-container .info-content .info-title{
   min-width: 135rpx;
   color:#ccc;
   font-size: 30rpx;
   display: inline-block;
}
.info-container .info-content .info{
   font-size: 30rpx;
   color:#ccc;
   text-align: right;
}
.post-container {
    height: 100rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    position: fixed;
    width: 690rpx;
    background-color: #fff;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 30rpx;
    justify-content: space-between;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  background-color: #ccc;
  opacity: 0.5;
  width: 100%;
  height: 100%
}
.post-fake {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 60rpx;
    width: 460rpx;
    border: 1px solid #999;
    border-radius: 15px;
    font-size: 22rpx;
    padding-left: 20rpx;
}

.posting-container {
    bottom: 0;
    position: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    width: 100%;
    z-index: 999;
}

.post-header {
    width: 100%;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.cancel {
    color: #666;
}

.post-header text {
    padding: 25rpx;
}