page{
  background-color: #ccc;
}
.header{
  background-color: #ffffff;
  width: 100%;
   display: -webkit-flex; /* Safari */
    -webkit-align-items: center; /* Safari 7.0+ */
    display: flex;
	flex-direction:column;
    align-items: center;
}
.header .author{
    color:#ccc;
    font-size: 28rpx;
}
.header image{
   width: 250rpx;
   height: 300rpx;
}
.shortComment{
  margin-top: 30rpx;
  display: -webkit-flex; /* Safari */
    -webkit-align-items: center; /* Safari 7.0+ */
    display: flex;
	flex-direction:column;
    align-items: center;
  background-color: #ffffff;
}
.commentArea{
  width: calc(100vw - 20rpx);
}
.shortComment .comment{
    display: inline-block;
    background-color: #ccc;
     margin-left:20rpx; 
    margin-bottom: 10rpx;
    font-size: 28rpx;
    height: 50rpx;
    padding-left: 10rpx;
    line-height: 50rpx;
    padding-right: 10rpx;

}
.comment .likeNum{
  color: red;
  font-size: 15rpx;
}
.shortComment .comment:nth-child(1){
    margin-left: 0;
}